FROM	node:18-bookworm

# Change working directory
WORKDIR	/app

# Copy config files
COPY	package*.json ./
COPY	tsconfig.json ./

# Install dependencies
RUN		npm install


# Copy source code
COPY	srcs/ ./srcs/

RUN		npm run build

EXPOSE	3000

CMD ["node", "dist/index.js"]
