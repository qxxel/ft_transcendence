FROM	node:18-bookworm

WORKDIR	/app

# Copy config files
COPY	package*.json ./
COPY	tsconfig.json ./

# Install dependencies
RUN		npm install

# Copy source code
COPY	srcs/ ./srcs/

# Expose a volume to retrieve the compiled files
# VOLUME	["/app/dist"]

RUN	npm run build

# Par d√©faut, juste compiler (on peut override avec docker run)
CMD	["tail", "-f"]