# Use the penultimate version stable of Debian
FROM nginx:bookworm

# Copy config and html of the website
# COPY	conf/nginx.conf /etc/nginx/nginx.conf
COPY	conf/nginx_dev.conf /etc/nginx/nginx.conf

# Expose 8080
# EXPOSE 8080
EXPOSE 443

# Start nginx
CMD ["nginx", "-g", "daemon off;"]
